<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
    <%= link_to t('delete') , [comment.post, comment],
                method: :delete, class: "button is-danger", data: { confirm: t('posts.show.aus') } %>
  </article>

</div>