<p id="notice"><%= notice %></p>

<h1><%=t "messages.index.messages"%></h1>

<table>
  <thead>
    <tr>
      <th><%=t "messages.index.content"%></th>
      <th><%=t "messages.index.user"%></th>
      <th><%=t "messages.index.room"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.user_id %></td>
        <td><%= message.room_id %></td>
        <td><%= link_to t("messages.index.show"), message %></td>
        <td><%= link_to t("messages.index.edit"), edit_message_path(message) %></td>
        <td><%= link_to t("messages.index.destroy"), message, method: :delete, data: { confirm: t('posts.show.aus') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

